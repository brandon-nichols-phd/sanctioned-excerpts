{
  "bracketSpacing": true,
  "trailingComma": "es5",
  "arrowParens": "always",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "printWidth": 140,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": [
        "*.html",
        "legacy/**/*.js"
      ],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "flow"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}